<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/row_padding">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_header_size" />

                <TextView
                    android:id="@+id/text_view_subcriber_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/textColorInfo"
                    android:textSize="@dimen/text_title_size"></TextView>
            </LinearLayout>

            <Button
                android:id="@+id/button_subscribe"
                android:layout_width="@dimen/subscribe_width"
                android:layout_height="@dimen/subscribe_height"
                android:background="@drawable/ic_subscribe"
                android:clickable="true"
                android:visibility="invisible"></Button>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@android:drawable/divider_horizontal_bright" />
    </LinearLayout>
</layout>