<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_playlist_height">

    <ImageView
        android:id="@+id/item_playlist_img_thumb"
        android:layout_width="@dimen/row_playlist_width"
        android:layout_height="@dimen/row_playlist_height"
        android:src="@drawable/ic_thumb" />

    <TextView
        android:id="@+id/item_playlist_title"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/playlistTextColor"
        android:textSize="@dimen/text_title_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_playlist_img_action"
            android:layout_width="@dimen/grid_menu_more_size"
            android:layout_height="@dimen/grid_menu_more_size"
            android:src="@drawable/ic_menu_more" />
    </LinearLayout>
</LinearLayout>