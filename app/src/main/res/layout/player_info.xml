<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/row_padding">

        <FrameLayout
            android:layout_width="@dimen/row_thumb_width"
            android:layout_height="@dimen/row_thumb_height">

            <ImageView
                android:id="@+id/player_info_img_thumb"
                android:layout_width="@dimen/row_thumb_width"
                android:layout_height="@dimen/row_thumb_height"
                android:src="@drawable/ic_thumb" />

            <TextView
                android:id="@+id/player_info_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/row_padding_topbottom"
                android:layout_marginRight="@dimen/row_padding_topbottom"
                android:background="@color/bgTime"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_info_size" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/row_padding"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_info_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_title_size"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player_info_img_action"
                android:layout_width="@dimen/menu_more_size"
                android:layout_height="@dimen/menu_more_size"
                android:src="@drawable/ic_menu_more" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/row_padding"
        android:paddingBottom="@dimen/row_padding"
        android:paddingRight="@dimen/row_padding">

        <TextView
            android:id="@+id/player_info_tv_plays_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/textColorInfo"
            android:textSize="@dimen/text_info_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_info_tv_likes_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:lines="1"
                android:textColor="@color/textColorInfo"
                android:textSize="@dimen/text_info_size" />

            <TextView
                android:id="@+id/player_info_tv_dislikes_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_info_padding"
                android:lines="1"
                android:textColor="@color/textColorInfo"
                android:textSize="@dimen/text_info_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_info_tv_uploaded_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/textColorInfo"
                android:textSize="@dimen/text_info_size" />

            <TextView
                android:id="@+id/player_info_tv_uploader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_info_padding"
                android:lines="1"
                android:textColor="@color/textColorInfo"
                android:textSize="@dimen/text_info_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@android:drawable/divider_horizontal_bright" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:padding="@dimen/row_padding">

        <TextView
            android:id="@+id/player_info_text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorInfo"
            android:textSize="@dimen/text_title_size" />
    </LinearLayout>

</LinearLayout>