<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/row_padding">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_thumb"
            android:layout_width="@dimen/channel_height"
            android:layout_height="@dimen/channel_height"
            android:src="@drawable/ic_user" />

        <ImageView
            android:layout_width="@dimen/channel_height"
            android:layout_height="@dimen/channel_height"
            android:src="@drawable/ic_bg_user" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/row_padding"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:textColor="@color/text_title"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/text_view_num_subscribers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/text_title_other"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_video_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/text_title_other"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>