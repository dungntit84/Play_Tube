<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/row_padding"
    android:paddingTop="@dimen/row_padding">

    <FrameLayout
        android:layout_width="@dimen/row_thumb_width"
        android:layout_height="@dimen/row_thumb_height">

        <ImageView
            android:id="@+id/item_youtube_img_thumb"
            android:layout_width="@dimen/row_thumb_width"
            android:layout_height="@dimen/row_thumb_height"
            android:src="@drawable/ic_thumb" />

        <TextView
            android:id="@+id/item_youtube_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/row_padding_topbottom"
            android:layout_marginRight="@dimen/row_padding_topbottom"
            android:background="@color/bgTime"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_info_size" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/row_padding"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_youtube_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="2"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_title_size"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_youtube_tv_plays_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/textColorInfo"
                    android:textSize="@dimen/text_info_size" />

                <TextView
                    android:id="@+id/item_youtube_tv_likes_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_info_padding"
                    android:lines="1"
                    android:textColor="@color/textColorInfo"
                    android:textSize="@dimen/text_info_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_youtube_tv_uploaded_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/textColorInfo"
                    android:textSize="@dimen/text_info_size"/>

                <TextView
                    android:id="@+id/item_youtube_tv_uploader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_info_padding"
                    android:lines="1"
                    android:textColor="@color/textColorInfo"
                    android:textSize="@dimen/text_info_size"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_youtube_img_action"
                android:layout_width="@dimen/menu_more_size"
                android:layout_height="@dimen/menu_more_size"
                android:src="@drawable/ic_menu_more" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>